    "@types/node": "^22.5.4",
    "@types/react": "19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/ui": "^2.0.5",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.9.0",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "playwright": "^1.47.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.20.6",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
