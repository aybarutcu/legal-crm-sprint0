    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.545.0",
    "next": "15.0.0",
    "next-auth": "^4.24.7",
    "nodemailer": "^6.9.13",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.23.8"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
